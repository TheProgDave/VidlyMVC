@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>


@if (@Model.Movies.Count == 0)
{
    <p>There are currently no movies.</p>
}
else 
{
    <ul>
        @{
            foreach (var movie in @Model.Movies)
            {
                <li>@movie.Name</li>
            }
        }
    </ul>
}


